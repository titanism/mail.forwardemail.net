    "bits-ui": "^2.15.4",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dexie": "^4.2.1",
    "dompurify": "^3.1.6",
    "emoji-picker-element": "^1.21.5",
    "flexsearch": "^0.7.43",
    "hash-wasm": "^4.12.0",
    "hotkeys-js": "4.0.0-beta.7",
    "ky": "^1.14.1",
    "libsodium-wrappers": "^0.7.16",
    "lucide-svelte": "^0.562.0",
    "marked": "^12.0.2",
    "openpgp": "^6.2.2",
    "postal-mime": "^2.6.0",
    "preact": "^10.24.3",
    "svelte": "^5.48.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
