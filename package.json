{
  "name": "forwardemail-webmail-client",
  "version": "0.1.13",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20 <21",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "node scripts/validate-schema-version.js",
    "build": "vite build && node scripts/build-sw-sync.js && workbox generateSW workbox.config.cjs",
    "preview": "vite preview",
    "check": "svelte-check",
    "analyze": "ANALYZE=true pnpm build",
    "lhci:collect": "lhci collect --config=./lighthouserc.cjs",
    "lhci:assert": "lhci assert --config=./lighthouserc.cjs",
    "lhci": "pnpm build && pnpm lhci:collect && pnpm lhci:assert",
    "test": "vitest",
    "test:unit": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npx playwright test tests/e2e/",
    "test:e2e:tauri": "npx playwright test tests/e2e/tauri/",
    "test:e2e:tauri-binary": "node tests/e2e/tauri/wdio-tauri-runner.mjs",
    "test:e2e:websocket": "npx playwright test tests/e2e/websocket/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "prepare": "husky install",
    "release": "np",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "tauri:android:dev": "tauri android dev",
    "tauri:android:build": "tauri android build",
    "tauri:ios:dev": "tauri ios dev",
    "tauri:ios:build": "tauri ios build",
    "tauri:icon": "tauri icon src-tauri/icons/app-icon.png",
    "tauri:signer:generate": "tauri signer generate -w ~/.tauri/forwardemail.key"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/literata": "^5.2.8",
